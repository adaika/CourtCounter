<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Gol!"
        android:textColor="#616161"
        android:textSize="40sp" />
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#616161"
            android:text="Team A" />

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="56sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:text="0" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="threePointsForteamA"
            android:text="+3 Points" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="twoPointsForteamA"
            android:text="+2 Points" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="freeThrowForteamA"
            android:text="Free Throw" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="320dp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="0dp"

            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#616161"
            android:text="Team B" />

        <TextView
            android:id="@+id/team_a_score_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:textSize="56sp"
            android:textColor="#000"
            android:fontFamily="sans-serif-light"
            android:text="0" />

        <Button
            android:id="@+id/button_3_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="threePointsForteamB"
            android:text="+3 Points" />

        <Button
            android:id="@+id/button_2_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="twoPointsForteamB"
            android:text="+2 Points" />

        <Button
            android:id="@+id/button_1_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:onClick="freeThrowForteamB"
            android:text="Free Throw" />
    </LinearLayout>
</LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:onClick="reset"
        android:layout_margin="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>


</RelativeLayout>